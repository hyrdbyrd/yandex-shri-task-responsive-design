.content
    display: flex
    flex-direction: column
    flex-grow: 1

.content__container
    width: 80%
    flex-grow: 1
    display: flex
    flex-direction: column
    align-items: flex-start
    justify-content: space-around

.content__title
    font-size: 36px
    margin: 30px 0

@media (max-width: $media-middle-width)
    .content-section:last-child
        margin-bottom: 5vw

@media (max-width: $media-mobile-width)
    .content__container
        width: 90%